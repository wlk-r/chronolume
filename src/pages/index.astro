<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Atmospheric Clock</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@200;300;400&display=swap" rel="stylesheet" />
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    html, body { width: 100%; height: 100%; overflow: hidden; background: #0a0a2e; }
    #canvas-container { width: 100%; height: 100%; position: fixed; top: 0; left: 0; }
    canvas { display: block; }
    #clock-overlay {
      position: fixed;
      bottom: 40px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 10;
      text-align: center;
      font-family: 'JetBrains Mono', monospace;
      color: rgba(255, 255, 255, 0.7);
      pointer-events: none;
      user-select: none;
    }
    #clock-time {
      font-size: 3.5rem;
      font-weight: 200;
      letter-spacing: 0.15em;
      text-shadow: 0 0 30px rgba(0,0,0,0.5);
    }
    #clock-seconds {
      font-size: 1.2rem;
      font-weight: 300;
      opacity: 0.5;
      vertical-align: super;
      margin-left: 4px;
    }
    #clock-label {
      font-size: 0.75rem;
      font-weight: 300;
      opacity: 0.4;
      margin-top: 4px;
      letter-spacing: 0.1em;
    }
    @media (max-width: 768px) {
      #clock-time { font-size: 2.2rem; }
      #clock-overlay { bottom: 24px; }
    }
  </style>
</head>
<body>
  <div id="canvas-container"></div>
  <div id="clock-overlay">
    <div id="clock-time">00:00<span id="clock-seconds">00</span></div>
    <div id="clock-label"></div>
  </div>
  <script>
    import '../scene.js';
  </script>
</body>
</html>
